{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Project",
  "type": "array",
  "uniqueItems": true,
  "items": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "id": {
        "type": "string"
      },
      "name": {
        "type": "string"
      },
      "type": {
        "type": "string",
        "enum": [
          "Design Studio",
          "International Competition",
          "Design Studio / Research",
          "Research",
          "Research Assistanship"
        ]
      },
      "year": {
        "type": "string"
      },
      "description": {
        "type": "string",
        "maxLength": 120
      },
      "longDescription": {
        "type": "string"
      },
      "location": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "url": {
            "type": "string",
            "format": "uri"
          }
        },
        "required": ["name"]
      },
      "group": {
        "type": "array",
        "uniqueItems": true,
        "items": {
          "type": "string"
        }
      },
      "awards": {
        "type": "array",
        "uniqueItems": true,
        "items": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "url": {
              "type": "string",
              "format": "uri"
            }
          },
          "required": ["name"]
        }
      },
      "publications": {
        "type": "array",
        "uniqueItems": true,
        "items": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "url": {
              "type": "string",
              "format": "uri"
            }
          },
          "required": ["name", "url"]
        }
      },
      "gallery": {
        "type": "object",
        "properties": {
          "className": {
            "type": "string"
          }
        },
        "required": ["className"]
      },
      "tutors": {
        "type": "array",
        "uniqueItems": true,
        "items": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "url": {
              "type": "string",
              "format": "uri"
            }
          },
          "required": ["name", "url"]
        }
      },
      "mediaContainer": {
        "type": "object",
        "properties": {
          "className": {
            "type": "string"
          },
          "media": {
            "type": "array",
            "uniqueItems": true,
            "items": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "src": {
                  "type": "string"
                },
                "alt": {
                  "type": "string"
                },
                "className": {
                  "type": "string"
                },
                "credit": {
                  "type": "object",
                  "additionalProperties": false,
                  "properties": {
                    "text": {
                      "type": "string"
                    },
                    "url": {
                      "type": "string"
                    },
                    "isButton": {
                      "type": "boolean",
                      "default": true
                    }
                  }
                },
                "sizes": {
                  "type": "string"
                },
                "caption": {
                  "type": "object",
                  "additionalProperties": false,
                  "properties": {
                    "text": {
                      "type": "string"
                    },
                    "isExpose": {
                      "type": "boolean",
                      "default": true
                    }
                  }
                },
                "isHero": {
                  "type": "boolean",
                  "default": true
                },
                "isAdaptive": {
                  "type": "boolean",
                  "default": true
                },
                "isCarousel": {
                  "type": "boolean",
                  "default": true
                },
                "isExternal": {
                  "type": "boolean",
                  "default": true
                },
                "isInverted": {
                  "type": "boolean",
                  "default": true
                },
                "isVideo": {
                  "type": "boolean",
                  "default": true
                }
              },
              "required": ["src", "alt"],
              "allOf": [
                {
                  "if": {
                    "properties": {
                      "isVideo": {
                        "enum": [true]
                      }
                    },
                    "required": ["isVideo"]
                  },
                  "then": {
                    "properties": {
                      "isInverted": {
                        "const": false
                      },
                      "isAdaptive": {
                        "const": false
                      }
                    },
                    "not": {
                      "required": ["sizes"]
                    }
                  }
                },
                {
                  "if": {
                    "properties": {
                      "isExternal": {
                        "enum": [true]
                      }
                    },
                    "required": ["isExternal"]
                  },
                  "then": {
                    "properties": {
                      "src": {
                        "format": "uri"
                      }
                    }
                  }
                }
              ]
            }
          }
        },
        "required": ["media"]
      }
    },
    "required": [
      "id",
      "name",
      "type",
      "year",
      "description",
      "longDescription",
      "location",
      "gallery",
      "mediaContainer"
    ]
  }
}
