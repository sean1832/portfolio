{
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "about": {
      "type": "string"
    },
    "image": {
      "type": "object",
      "properties": {
        "src": {
          "type": "string"
        },
        "alt": {
          "type": "string"
        }
      },
      "required": ["src"]
    },
    "keywords": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "social": {
      "type": "object",
      "properties": {
        "instagram": {
          "type": "string",
          "format": "uri"
        },
        "github": {
          "type": "string",
          "format": "uri"
        },
        "youtube": {
          "type": "string",
          "format": "uri"
        }
      }
    },
    "contact": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "format": "email"
        },
        "phone": {
          "type": "string"
        }
      }
    }
  },
  "required": ["name", "about", "social", "contact"]
}
